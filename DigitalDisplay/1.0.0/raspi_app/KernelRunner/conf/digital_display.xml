<!--
    This is the main digital display configuration file
-->
<DigitalDisplay xmlns="http://wso2.org/projects/iot/digital_display.xml">
    <!--
       Product Name
    -->
    <Name>Digital Display Device Manager</Name>

    <!--
       machine readable unique key to identify each product
    -->
    <ServerKey>D3M</ServerKey>

    <!--
       Product Version
    -->
    <Version>0.0.1</Version>

    <!--
       Webbrowser
    -->
    <WebBrowser>
      <Name>midori</Name>
      <Path></Path>
      <Port>8000</Port>
    </WebBrowser>

    <!--WebBrowser>
      <Name>default</Name>
      <Path>open</Path>
      <Port>8000</Port>
    </WebBrowser-->

    <!--
      Sequence for display events
    -->
    <DisplaySequence>
      <Resource type="folder" time="15s" path="../Content/1" />
      <Resource type="url" time="15s" url="http://www.github.com" />
      <Resource type="folder" time="15s" path="../Content/2" />
      <Resource type="url" time="15s" url="http://www.wso2.com" />
    </DisplaySequence>

</DigitalDisplay>